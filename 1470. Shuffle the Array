class Solution {
    public int[] shuffle(int[] nums, int n) {
        int[] left=new int[n];
        int[] right=new int[n];
        int[] ans=new int[2*n];
        for(int i=0;i<n;i++){
            left[i]=nums[i];
               
        }
        for(int j=0;j<n;j++){
            right[j]=nums[j+n];
        }
        int l=0,r=0,k=0;
        while(k<2*n){
            ans[k++]=left[l++];
            ans[k++]=right[r++];
        }
        return ans;

      

        
    }
}
