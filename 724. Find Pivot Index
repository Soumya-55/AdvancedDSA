class Solution {
    public int pivotIndex(int[] nums) {
        int right_sum=0;
        int left_sum=0;
        int total=0;
        for(int i=0;i<nums.length;i++){
            total+=nums[i];
        }
        for(int j=0;j<nums.length;j++){
                right_sum =total-left_sum-nums[j];
                if( left_sum==right_sum){
                    return j;
                }
                else{
                    left_sum=left_sum+nums[j];
                }


            }
        
        return -1;
    }
}
